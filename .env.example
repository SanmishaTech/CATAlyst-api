# Database configuration
DATABASE_URL="mysql://username:password@localhost:3306/dbname"

# JWT configuration
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="1d"

# Financial Year Settings
USE_FINANCIAL_YEAR_EXPIRY=true
FINANCIAL_YEAR_END_DATE="03-31" # Format: MM-DD (March 31st)

# Cron Settings
CRON_ENABLED=true
CRON_INTERVAL_MINUTES=5

# Validation 2 Cron Settings
CRON_VALIDATION_2_ENABLED=true
CRON_VALIDATION_2_INTERVAL_MINUTES=5
CRON_VALIDATION_3_ENABLED=true
# Business classification cron (runs after Validation 3; default enabled)
CRON_BUSINESS_CLASSIFICATION_ENABLED=true
# Interval in minutes (<=30 uses */N; >30 uses hourly schedule)
CRON_BUSINESS_CLASSIFICATION_MINUTES=10
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL="llama-3.3-70b-versatile"
